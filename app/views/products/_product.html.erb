<div id="products">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Title</th>
       <th scope="col">Description</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% product.each do |product| %>
           <tr>
              <th scope="row"><%= product.id %></th>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= product.title %></td>
              <td><%= product.description %></td>
              <td><%= link_to "Show", product_path(product.id), class:"btn btn-primary" %></td>
              <td><%= link_to "Edit", edit_product_path(product.id), class:"btn btn-primary" %></td>
              <td><%= button_to "Delete", product_path(product.id), method: :delete, class:"btn btn-danger" %></td>
          </tr>
    <% end %>
  </tbody>
</table>
</div>

